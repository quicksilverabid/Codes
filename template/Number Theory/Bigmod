#include<bits/stdc++.h>
using namespace std;       
#define ll         long long
#define endl       "\n"

const int mod=1e9+7;

ll bigmod(ll n,ll p){
    ll ans=1;
    while(p){
        if(p&1) ans=(ans*n)%mod;
        p>>=1;
        n=(n*n)%mod;
    }
    return ans%mod;
}

ll inversemod(ll n){
    return bigmod(n,mod-2);
}
 
void solve(){
    int n,p;
    cin>>n>>p;
    cout<<bigmod(n,p)<<endl;
}
 
int main(){
    ios_base::sync_with_stdio(0), cin.tie(0) ;
    int tc=1;
    //cin>>tc;
    while(tc--){
     solve();
    }
}
